<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PTA_Restaurants.XForms.Views.ListItemViewCell">

  <StackLayout Orientation="Vertical" VerticalOptions="Center" Padding="0,0,15,0">
    <Label Text="{Binding Name}"
             TextColor="#3498db"
             FontSize="20"
             Style="{DynamicResource ListItemTextStyle}"/>
    <Label Text="{Binding Description}"
             TextColor="#ffffff"
             FontSize="16"
             Style="{DynamicResource ListItemTextStyle}"/>
  </StackLayout>
  
</ViewCell>
